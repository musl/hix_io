#!/usr/bin/env ruby
# vim: set nosta noet ts=4 sw=4 ft=ruby:
# encoding: UTF-8

require 'trollop'
require 'hix_io/tools/config_processor'

opts = Trollop.options do
	banner 'HixIO Configuration Tool'
	opt :etc_dir, 'Required: The path to the mongrel2 etc directory.', :type => :string, :required => true
	opt :debug, 'Force debug logging.', :default => false
end

HixIO::Tools::ConfigProcessor.run!( opts )

