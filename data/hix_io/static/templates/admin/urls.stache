<div class="post">
	<h2>Shorten a URL:</h2>
	<div class="pure-form pure-g l-box">
		<input type="text" id="shorten" name="shorten" class="pure-input pure-u-1" placeholder="http://example.com">
	</div>
</div>

{{#url}}
<div class="post">
	<h2>Short URL:</h2>
	{{expand_link short}}
</div>
{{/url}}

<div class="post">
	<h2>URLs</h2>
	{{datatable urls "hits short url source_ip ctime"}}
</div>
