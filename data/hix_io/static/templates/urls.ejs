<div class="post">
	<div class="l-box">
		<div class="pure-form pure-g">
			<label for="shorten" class="pure-u-1">Shorten a URL:</label>
			<input type="text" id="shorten" name="shorten" class="pure-input pure-u-1" placeholder="http://example.com">
		</div>
	</div>
</div>

<div class="post">
	<div class="l-box">
		<div class="pure-form pure-g">
			<div class="pure-u-1-2">
				<h1>Latest <%= latest_urls.length %> URLs</h1>
				<ol>
					<% latest_urls.each( function(u) { %>
						<li><a href="http://hix.io/<%= u.short %>">http://hix.io/<%= u.short %></a><br><dd><%= u.url %></dd></li>
					<% }); %>
				</ol>
			</div>
			<div class="pure-u-1-2">
				<h1>Top <%= top_urls.length %> URLs</h1>
				<ol>
					<% top_urls.each( function(u) { %>
						<li><a href="http://hix.io/<%= u.short %>">http://hix.io/<%= u.short %></a><dd><%= u.url %></dd></li>
					<% }); %>
				</ol>
			</div>
		</div>
	</div>
</div>
